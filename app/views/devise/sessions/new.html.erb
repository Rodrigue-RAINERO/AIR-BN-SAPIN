<div class="big-box-show-trees">
  <div class="row d-flex justify-content-center mx-0">
    <div class="col-md-4 mb-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="div-form-inputs">
          <h1>Log in</h1>
          <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "text-form-inputs" } %>
          <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: "text-form-inputs" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <div class="d-flex justify-content-center mb-4 pt-3">
            <div class="form-actions">
              <%= f.button :submit, "Log in" %>
            </div>
            <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
