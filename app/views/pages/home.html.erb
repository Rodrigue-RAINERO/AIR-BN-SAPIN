<% count = @trees.length %>
<div class = "test">
<% if current_user %>
<% total_bookings = current_user.trees.map{ |tree| tree.bookings}.flatten.count %>
<p>Vous avez eu <%= total_bookings %> r√©servations</p>
<% end %>
</div>
<div class="d-flex justify-content-between">
  <div class="container big-box-trees-home-page">
    <% count = @trees.length %>
    <h1><strong>Home page</strong> (<%= count %> trees)</h1>
    <div class="box-trees-home-page">
      <div class="row">
        <% @trees.each do |tree| %>
          <div class="col-md-4 mb-4">
            <div class="card h-100">
              <img src="<%= tree.image %>" class="card-img-top" alt="tree Image">
              <div class="card-body">
                <h4 class="card-title"><strong><%= link_to tree.titre, tree_path(tree) %></strong></h4>
                <div class="d-flex flex-column justify-content-start">
                  <p><%= tree.geoloc %></p>
                  <p><%= tree.description %></p>
                  <div class="d-flex justify-content-between">
                  <p><%= tree.taille %> cm</p>
                  <p><%= tree.price %> <i class="fa-solid fa-euro-sign"></i> </p>
                  </div>
                </div>
              </div>
              <% if current_user != tree.user%>
                <%= link_to "Reserve", current_user.nil? ? new_user_session_path : new_tree_booking_path(tree), class: "btn btn-primary" %>
              <% end %>
              <div class="card-home-footer">
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="map-home-page">
    dgerge
  </div>
</div>
